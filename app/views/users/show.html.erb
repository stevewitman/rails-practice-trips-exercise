<h1 class="page-header">
  <%= @user.name %>
</h1>
<p>
  <%= @user.email %>
</p>
<table class="table">
  <thead>
    <td>Location</td>
    <td>Date</td>
    <td>Cost</td>
    <td></td>

  </thead>

  <% @trips.each do |trip| %>
  <tr>
    <td><%= trip.location %></td>
    <td><%= trip.date %></td>
    <td><%= trip.cost %></td>
    <td><%= link_to "edit", edit_user_trip_path(@user, trip) %></td>
  </tr>
  <% end %>

</table>
<%= link_to "New Trip", new_user_trip_path(@user)  %>
